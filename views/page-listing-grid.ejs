	</div> <!-- col.// -->
</div> <!-- row.// -->
	</div> <!-- card-body .// -->
</div> <!-- card.// -->
<!-- ============================ FILTER TOP END.// ================================= -->

<header class="mb-3">
	<div class="form-inline">
		<strong class="mr-md-auto"></strong>
		<select class="mr-2 form-control">
			<option>Новое сначало</option>
			<option>Популярное сначало</option>
			<option>Самое дешевое сначало</option>
		</select>
	</div>
</header><!-- sect-heading -->
<nav class="mb-4" aria-label="Page navigation sample">
	<ul class="pagination">
	  <% if(page > 3){ %>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)-1 %>">Previous</a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)-1 %>"><%=parseInt(page)-2 %></a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)-2 %>"><%=parseInt(page)-1 %></a></li>
	  <li class="page-item active"><a class="page-link active" href="/products?page=<%=parseInt(page) %>"><%=parseInt(page) %></a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+1 %>"><%=parseInt(page)+1 %></a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+2 %>"><%=parseInt(page)+2 %></a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+1 %>">Next</a></li>
	  <% } %> 
	  <% if(page === undefined){ %>
		<li class="page-item "><a class="page-link active" href="/products?page=1">1</a></li>
		<li class="page-item"><a class="page-link" href="/products?page=2">2</a></li>
		<li class="page-item"><a class="page-link" href="/products?page=3">3</a></li>
		<li class="page-item"><a class="page-link" href="/products?page=1">Next</a></li>
	  <% } %> 
	  <% if(page != undefined && page < 4){ %>
		<li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)-1 %>">Previous</a></li>
		<li class="page-item active"><a class="page-link active" href="/products?page=<%=parseInt(page) %>"><%=parseInt(page) %></a></li>
		<li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+1 %>"><%=parseInt(page)+1 %></a></li>
		<li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+2 %>"><%=parseInt(page)+2 %></a></li>
		<li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+1 %>">Next</a></li>
	  <% } %> 
	</ul>
</nav>
<div class="row">
	<% products.forEach(function(products) { %>
	<div class="col-md-3">
		<figure class="card card-product-grid">
			<div class="img-wrap"> 
				<span class="badge badge-danger"> NEW </span>
				<%if (products.Images[0]) { %>
					<img src="/images/products/<%= products.Images[0] %>">
				<%} else{ %>
					<img src="/images/no-img.jpg">
				<% } %>		
			</div> <!-- img-wrap.// -->
			<figcaption class="info-wrap">
					<a href="/products/view/<%= products._id %>" class="title mb-2"><%= products.Name %></a>

					
					<p class="mb-2"><%= products.Packing %> ШТ <small class="text-muted">в комплекте</small></p>
					<p class="mb-2"><small class="text-muted">Категория: <%= products.Cat %> </small></p>
					<p class="mb-2"><small class="text-muted">Партномер: <%= products.PartNum %> </small></p>
					<p class="mb-2"><small class="text-muted">Штучный заказ: <%= products.Partial %> </small></p>
					<p class="mb-2"><small class="text-muted">ID: <%= products._id %> </small></p>
					<hr>
					
					<p class="mb-3">
						<span class="tag"> <i class="fa fa-check"></i> <%= products.Brand %></span> 
					</p>
				


					<a href="/products/view/<%= products._id %>" class="btn btn-outline-primary">  Подробнее </a>	
					
			</figcaption>
		</figure>
	</div> <!-- col.// -->
	
	<% }); %>
</div> <!-- row end.// -->

<nav class="mb-4" aria-label="Page navigation sample">
	<ul class="pagination">
	  <% if(page > 3){ %>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)-1 %>">Previous</a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)-1 %>"><%=parseInt(page)-2 %></a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)-2 %>"><%=parseInt(page)-1 %></a></li>
	  <li class="page-item active"><a class="page-link active" href="/products?page=<%=parseInt(page) %>"><%=parseInt(page) %></a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+1 %>"><%=parseInt(page)+1 %></a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+2 %>"><%=parseInt(page)+2 %></a></li>
	  <li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+1 %>">Next</a></li>
	  <% } %> 
	  <% if(page === undefined){ %>
		<li class="page-item "><a class="page-link active" href="/products?page=1">1</a></li>
		<li class="page-item"><a class="page-link" href="/products?page=2">2</a></li>
		<li class="page-item"><a class="page-link" href="/products?page=3">3</a></li>
		<li class="page-item"><a class="page-link" href="/products?page=1">Next</a></li>
	  <% } %> 
	  <% if(page != undefined && page < 4){ %>
		<li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)-1 %>">Previous</a></li>
		<li class="page-item active"><a class="page-link active" href="/products?page=<%=parseInt(page) %>"><%=parseInt(page) %></a></li>
		<li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+1 %>"><%=parseInt(page)+1 %></a></li>
		<li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+2 %>"><%=parseInt(page)+2 %></a></li>
		<li class="page-item"><a class="page-link" href="/products?page=<%=parseInt(page)+1 %>">Next</a></li>
	  <% } %> 
	</ul>
</nav>


<div class="box text-center">
	<p>Вы нашли что искали？</p>
	<a href="" class="btn btn-light">Да</a>
	<a href="" class="btn btn-light">Нет</a>
</div>

</div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->


